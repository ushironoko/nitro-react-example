{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "#nitro": ["./node_modules/nitropack-edge/dist/runtime/index"]
    }
  },
  "include": ["./src", "./.nitro/types/nitro.d.ts", "handler.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
